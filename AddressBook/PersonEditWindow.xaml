<Window x:Class="AddressBook.PersonEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kişi Düzenle" Height="650" Width="760"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Kişi Düzenle" FontSize="18" FontWeight="SemiBold"/>

        <!-- Kişi bilgileri -->
        <GroupBox Grid.Row="2" Header="Kişi Bilgileri">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Ad"/>
                    <TextBox x:Name="EditFirstName"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Soyad"/>
                    <TextBox x:Name="EditLastName"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Telefon"/>
                    <TextBox x:Name="EditPhone"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Adresler -->
        <GroupBox Grid.Row="4" Header="Adresler">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="AddressesList" SelectionChanged="AddressesList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DisplayText}" Opacity="0.75" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- Adres satırı işlemleri -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Düzenle" Margin="0,0,6,0" Tag="{Binding}" Click="EditAddressRow_Click"/>
                                    <Button Content="Sil" Tag="{Binding}" Click="DeleteAddressRow_Click"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Adres formu (Ekle/Güncelle) -->
                <Border Grid.Row="1" Margin="0,10,0,0" Padding="10" BorderThickness="1" BorderBrush="#E5E7EB" CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.ColumnSpan="2">
                            <TextBlock Text="Başlık (Ev/İş)"/>
                            <TextBox x:Name="AddrTitle"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,8,10,0">
                            <TextBlock Text="İl"/>
                            <TextBox x:Name="AddrCity"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8,0,0">
                            <TextBlock Text="İlçe"/>
                            <TextBox x:Name="AddrDistrict"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0">
                            <TextBlock Text="Adres"/>
                            <TextBox x:Name="AddrLine" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Yeni Adres" Margin="0,0,8,0" Click="NewAddress_Click"/>
                            <Button Content="Kaydet / Güncelle" Click="SaveAddress_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Alt bar -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="İptal" Width="110" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Kaydet" Width="110" Click="SavePerson_Click"/>
        </StackPanel>
    </Grid>
</Window>
